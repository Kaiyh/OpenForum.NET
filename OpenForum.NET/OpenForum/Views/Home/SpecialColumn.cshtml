<div id="myTabContent" class="tab-content"  style="margin-top: 20px;">
    <!--1、++++++++++++++++++++++++++++++++++++  C/C++  -->
    <div id="cpp" class="tab-pane fade in active">
        @{
            int len = Model.Count;
            for (int i = len - 1; i >= 0; i--) {
                OpenForum.Models.Question v = Model[i];
                if (v.kind != "C/C++") {
                    continue;// 此模块为"C/C++"
                }
                string s = v.aID;
                int ans_tol = 0;
                if (s != null && s.Length > 0) {
                    string[] sp = s.Split('+');
                    ans_tol = sp.Length - 1;
                }
            <!--++++++++每条帖子的显示设置-->
                <div class="row que-box">
                    <div class="que-box-left text-center">
                        @ans_tol <br />回答
                    </div>
                    <div class="que-box-right">
                        <div class="que-draw">问题：@v.content</div>
                        <div class="que-info">
                            <div class="div1">
                                @Html.ActionLink("点击查看", "QuePage", "Home", new {
                           id = @v.id
                       }, new {
                           @class = "a"
                       }) &rarr;
                            </div>
                            <div class="div2">
                                <span> @v.master </span>&nbsp;&nbsp;于&nbsp;&nbsp;
                                <span> @v.time </span>&nbsp;&nbsp;提问
                                <span style="margin-left: 30px"> @v.kind </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

